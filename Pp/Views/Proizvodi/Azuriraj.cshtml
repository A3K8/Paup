﻿@using Pp.Models
@model Proizvodi
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (ViewBag.Novi)
{
    <h2>Kreiranje novog proizvoda</h2>
}
else
{
    <h2>Ažuriraj podatke o proizvodu</h2>
    <h3>@Model.Vrsta @Model.Materijal</h3>
}


@using (Html.BeginForm("Azuriraj", "Proizvodi", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))

{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Ispravite podatke!");

    if (!ViewBag.Novi)
    {

        <div class="form-group">
            @Html.LabelFor(model => model.Id, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Id, new { disabled = true, @class = "form-control" })
            </div>
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(model => model.Vrsta, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Vrsta, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Vrsta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Materijal, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Materijal, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Materijal, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Cijena, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Cijena, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Cijena, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span> Spremi
            </button>
        </div>
    </div>

}

@Html.ActionLink("Povratak bez spremanja", "Popis", "Proizvodi")